generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int        @id @default(autoincrement())
  email         String     @unique
  passwordHash  String
  name          String?
  createdAt     DateTime   @default(now())

  categories    Category[]
  entries       Entry[]
}

model Category {
  id            Int      @id @default(autoincrement())
  name          String
  type          String   // 'income' or 'expense'
  userId        Int?     @map("user_id") // Null for global default categories
  createdAt     DateTime @default(now()) @map("created_at")

  user          User?    @relation(fields: [userId], references: [id])
  entries       Entry[]

  @@unique([name, userId])
  @@map("categories")
}

model Entry {
  id          Int      @id @default(autoincrement())
  userId      Int      @map("user_id")
  categoryId  Int      @map("category_id")
  amount      Float
  date        DateTime
  description String?
  createdAt   DateTime @default(now()) @map("created_at")

  user        User     @relation(fields: [userId], references: [id])
  category    Category @relation(fields: [categoryId], references: [id])

  @@index([userId, date])
  @@map("entries")
}
